body { margin: 0; {{#if backgroundColour}}background-color: #{{backgroundColour}}; {{/if}} }
#page-container {
    position: initial;
    top: initial;
    left: initial;
}
{{/if}}
@media screen {
    #page-container {
        background-color: {{#if backgroundColour}}transparent !important{{else}}{{#if split}}#fff{{else}}#bbb{{/if}}{{/if}};
        background-image: none;
        -webkit-transition: none;
        transition: none;
{{#if split}}
        bottom: initial;
        right: initial;
        overflow: initial;
{{/if}}
    }
    .pf {
        box-shadow: {{#if split}}none;{{else}}1px 1px 0px #999;{{/if}}
    }
    #sidebar {
        background-image: none !important;
        background-color: transparent !important;
    }
}
